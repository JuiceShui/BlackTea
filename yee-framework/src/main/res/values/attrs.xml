<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--CircleImageView-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_outside_color" format="color|reference" />
        <attr name="border_inside_color" format="color|reference" />
    </declare-styleable>

    <!--UIView-->
    <declare-styleable name="UIView">
        <attr name="ui_background_color" format="color" />
        <attr name="ui_background_color_pressed" format="color" />
        <attr name="ui_background_color_disabled" format="color" />
        <attr name="ui_text_color_pressed" format="color" />
        <attr name="ui_text_color_disabled" format="color" />
        <attr name="ui_border_radius" format="dimension" />
        <attr name="ui_border_width" format="dimension" />
        <attr name="ui_border_color" format="color" />
    </declare-styleable>

    <!--UITextView-->
    <declare-styleable name="UITextView">
        <attr name="android:textColor" />
        <attr name="ui_text_color_pressed" />
        <attr name="ui_text_color_disabled" />
    </declare-styleable>

    <!--UITextView-->
    <declare-styleable name="CountButton">
        <attr name="count_duration" format="integer" />
    </declare-styleable>

    <!--UIEditText-->
    <declare-styleable name="UIEditText">
        <attr name="ui_clear_icon" format="reference" />
    </declare-styleable>

    <!--UIButton-->
    <declare-styleable name="UIButton">
        <attr name="android:textColor" />
        <attr name="ui_text_color_pressed" />
        <attr name="ui_text_color_disabled" />
    </declare-styleable>

    <!--HorizontalListView-->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <!--UIViewPager-->
    <declare-styleable name="UIViewPager">
        <attr name="canScroll" format="boolean" />
    </declare-styleable>

    <!--UIProgressBar-->
    <declare-styleable name="UIProgressBar">
        <attr name="duration" format="integer" />
        <attr name="progressColor" format="color" />
        <attr name="inverse" format="boolean" />
    </declare-styleable>

    <!--UITabLayout-->
    <declare-styleable name="UITabLayout">
        <attr name="tabSelectedBackground" format="reference" />
    </declare-styleable>


    <!-- appbar -->
    <declare-styleable name="AppBar">
        <attr name="app_bar_left_icon" format="reference" />
        <attr name="app_bar_left_text" format="string" />
        <attr name="app_bar_left_text_color" format="color" />
        <attr name="app_bar_title" format="string" />
        <attr name="app_bar_title_text_color" format="color" />
        <attr name="app_bar_right_icon" format="reference" />
        <attr name="app_bar_right_text" format="string" />
        <attr name="app_bar_right_text_color" format="color" />
        <attr name="app_bar_background" format="reference" />
        <attr name="app_bar_status_bar_enable" format="boolean" />
        <attr name="app_bar_custom_view" format="integer" />
    </declare-styleable>

    <!-- navibar -->
    <declare-styleable name="NavigationBar">
        <attr name="navi_bar_active_index" format="integer" />
    </declare-styleable>

    <!--CircleWaveView-->
    <declare-styleable name="CircleWaveView">
        <attr name="centerWidth" format="dimension" />
        <attr name="centerFill" format="boolean" />
    </declare-styleable>

    <!--CommonItem-->
    <declare-styleable name="CommonItem">
        <attr name="common_item_left_text" format="string|reference" />
        <attr name="common_item_right_text" format="string|reference" />
        <attr name="common_item_left_icon" format="reference" />
        <attr name="common_item_right_icon" format="reference" />
        <attr name="common_item_end_flag" format="boolean" />
        <attr name="common_item_has_bg" format="boolean" />
        <attr name="common_item_left_text_color" format="color|reference" />
        <attr name="common_item_right_text_color" format="color|reference" />
        <attr name="common_item_left_tip" format="string|reference" />
        <attr name="common_item_message_tip" format="string|reference" />
        <attr name="common_item_left_tip_text_color" format="color|reference" />
        <attr name="common_item_left_text_size" format="integer|reference"/>
        <attr name="common_item_right_text_size" format="integer|reference"/>
    </declare-styleable>

    <!--EditItem-->
    <declare-styleable name="EditItem">
        <attr name="edit_item_label" format="string" />
        <attr name="edit_item_hint" format="string" />
        <attr name="edit_item_text" format="string" />
        <attr name="edit_item_single_line" format="boolean" />
        <attr name="android:inputType" />
        <attr name="android:imeOptions" />
        <attr name="edit_item_label_min_width" format="dimension" />
        <attr name="edit_item_label_gravity" format="enum">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DonutProgress">
        <attr name="donut_progress" format="float" />
        <attr name="donut_max" format="integer" />

        <attr name="donut_unfinished_color" format="color" />
        <attr name="donut_finished_color" format="color" />

        <attr name="donut_finished_stroke_width" format="dimension" />
        <attr name="donut_unfinished_stroke_width" format="dimension" />

        <attr name="donut_text_size" format="dimension" />
        <attr name="donut_text_color" format="color" />

        <attr name="donut_prefix_text" format="string" />
        <attr name="donut_suffix_text" format="string" />
        <attr name="donut_text" format="string" />

        <attr name="donut_background_color" format="color" />

        <attr name="donut_inner_bottom_text" format="string" />
        <attr name="donut_inner_bottom_text_size" format="dimension" />
        <attr name="donut_inner_bottom_text_color" format="color" />

        <attr name="donut_circle_starting_degree" format="integer" />
        <attr name="donut_show_text" format="boolean" />
        <attr name="donut_inner_drawable" format="reference" />
    </declare-styleable>
</resources>