<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.shui.blacktea.widget.CircleImageView
            android:id="@+id/iv_connect_avatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="3dp"
            android:src="#f0f" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_connect_user"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="asdasdasdsadasdasdasdas" />


            <TextView
                android:id="@+id/tv_connect_signature"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="dasdasdasdasdasdda" />

        </LinearLayout>
    </LinearLayout>
</layout>