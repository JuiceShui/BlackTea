<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_chat_coming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.shui.blacktea.widget.CircleImageView
                android:id="@+id/iv_coming_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="#000" />

            <TextView
                android:id="@+id/tv_comming_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_item_left"
                android:gravity="center|left"
                android:text="adsdadasdasdadsdadasdasd" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_chat_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_post_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_item_right"
                android:gravity="center|right"
                android:text="adsdadasdasdadsdadasdasd" />

            <com.shui.blacktea.widget.CircleImageView
                android:id="@+id/iv_post_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="#000" />
        </LinearLayout>
    </LinearLayout>
</layout>