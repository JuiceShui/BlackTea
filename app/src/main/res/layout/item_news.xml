<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_common">

        <ImageView
            android:id="@+id/news_iv_thumb"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginEnd="@dimen/padding_common"
            android:layout_marginRight="@dimen/padding_common"
            android:transitionName="@string/transition_name"
            tools:background="#fff0f0f0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_tv_title"
                style="@style/AppTheme.Label.Title"
                android:layout_marginTop="@dimen/padding_common_d"
                android:minWidth="200dp"
                tools:background="#fff0f0f0" />

            <TextView
                android:id="@+id/news_tv_time"
                style="@style/AppTheme.Label"
                android:layout_marginTop="@dimen/padding_common_d"
                android:minWidth="50dp"
                android:textColor="@android:color/holo_orange_dark"
                tools:background="#fff0f0f0" />

            <TextView
                android:id="@+id/news_tv_describe"
                style="@style/AppTheme.Label"
                android:layout_marginTop="@dimen/padding_common_d"
                android:minWidth="100dp"
                tools:background="#fff0f0f0" />

            <TextView
                android:id="@+id/news_tv_actor"
                style="@style/AppTheme.Label"
                android:layout_marginTop="@dimen/padding_common_d"
                android:minWidth="100dp"
                tools:background="#fff0f0f0" />
        </LinearLayout>

    </LinearLayout>


</layout>