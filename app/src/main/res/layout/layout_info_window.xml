<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:background="@drawable/inforwindow_bg"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/iv_info_thumb"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cate_bg" />

            <TextView
                android:id="@+id/tv_info_description"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="dasdasdasdasdasd"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="9dp"
                android:background="#DFDFDF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/navigation_LL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="27dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_date" />

                    <TextView
                        android:id="@+id/tv_info_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="5dp"
                    android:background="#DFDFDF" />

                <LinearLayout
                    android:id="@+id/call_LL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="23dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_author" />

                    <TextView
                        android:id="@+id/tv_info_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- 用来偏移inforwindow的位置-->
        <TextView
            android:layout_width="38dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>